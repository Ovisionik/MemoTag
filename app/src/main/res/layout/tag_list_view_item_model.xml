<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="16dp"
    >

    <RelativeLayout
        android:background="?attr/colorOnSecondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:contentDescription="card view option"
            android:id="@+id/cv_more_option"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:rotation="90"

            android:src="@drawable/ic_more_horizontal" />

        <ImageView
            android:id="@+id/cv_tag_image_value"
            android:layout_width="80dp"
            android:layout_height="120dp"


            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"

            android:scaleType="centerCrop"
            tools:src="@color/cadmium_violet" />

        <TextView

            android:id="@+id/cv_label_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="90dp"
            android:ellipsize="end"

            android:gravity="center_horizontal"
            android:maxLines="1"

            android:text="Label"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cv_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|end"
            android:text="1999.06.09 12:30"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/brand_indic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_below="@+id/cv_label_value"
            android:layout_toEndOf="@id/cv_tag_image_value"
            android:text="Brand" />

        <TextView
            android:id="@+id/brand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_label_value"
            android:padding="2dp"

            android:maxLines="1"

            android:layout_toEndOf="@+id/brand_indic"
            android:layout_toStartOf="@+id/cv_price_value"

            android:text="SomebrandTM" />

        <TextView
            android:id="@+id/category_indic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:padding="2dp"

            android:layout_toEndOf="@id/cv_tag_image_value"
            android:layout_below="@+id/barcode_indic"
            android:text="Category" />

        <TextView
            android:id="@+id/category_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Other"
            android:maxLines="1"
            android:padding="2dp"

            android:layout_below="@+id/barcode_value"
            android:layout_toStartOf="@+id/cv_price_value"
            android:layout_toEndOf="@id/brand_indic"
            />

        <TextView
            android:id="@+id/barcode_indic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:text="Barcode"
            android:padding="2dp"

            android:layout_toEndOf="@id/cv_tag_image_value"
            android:layout_below="@+id/brand_indic"
            />

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="48564642"
            android:maxLines="1"
            android:padding="2dp"

            android:layout_below="@+id/brand_value"
            android:layout_toStartOf="@+id/cv_price_value"
            android:layout_toEndOf="@id/brand_indic"
            />

        <TextView
            android:id="@+id/id_indic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:padding="2dp"

            android:layout_below="@+id/category_value"
            android:layout_toEndOf="@id/cv_tag_image_value"

            android:text="ID" />

        <TextView
            android:id="@+id/id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="12"
            android:maxLines="1"
            android:padding="2dp"

            android:layout_below="@+id/category_value"
            android:layout_toStartOf="@+id/cv_price_value"
            android:layout_toEndOf="@+id/brand_indic"

            />

        <TextView
            android:id="@+id/cv_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_centerInParent="true"
            android:gravity="center|end"

            android:maxWidth="100dp"

            android:padding="8dp"
            android:text="12.5 â‚¬"
            android:textStyle="bold" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>