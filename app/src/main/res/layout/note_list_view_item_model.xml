<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="0dp"
    android:layout_marginHorizontal="4dp"
    android:outlineSpotShadowColor="@color/colorAccent"
    app:cardCornerRadius="8dp"
    app:cardElevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/add_note_field_cover">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TIS IS A TEST Click To Toggle Visibility"
            android:gravity="center"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_note_content">

        <EditText
            android:id="@+id/et_add_note"
            android:layout_width="280dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:importantForAutofill="no"
            tools:text=""
            android:hint="Click to add a note"
            />

        <EditText
            android:id="@+id/et_add_price_note"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:width="100dp"
            android:background="@null"
            android:gravity="center|end"
            android:hint="+Add Price+"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>